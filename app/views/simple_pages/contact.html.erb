<h1 id="headline">Contact Us</h1>
<h2>Note: Creating this as an example of a Rails web application. I actually have ZERO bikes, but if you still want to contact me:</h2>

<%= flash[:notice] %>

<%= form_with(url: "/simple_pages/thank_you", method: "post", local: true) do |form| %>
<div class="row contact-form">
  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class: "form-control", placeholder: "Enter Name" %>
  </div>
  <div class="form-group">
    <%= form.label :email %>
    <%= form.text_field :email, class: "form-control", placeholder: "Enter Email" %>
  </div>
  <div class="form-group">
    <%= form.label :message %>
    <%= form.text_area :message, class: "form-control", placeholder: "Enter Message", rows: 5 %>
  </div>
</div>
<div class="contact-form-submit">
  <%= form.submit "Send", class: "form-label" %>
  <% end %>
</div>
