<h1 id="headline"><%= @product.name %></h1>

<div class="row">
  <div class="col-sm-12 col-md-4">
    <%= image_tag(@product.image_url, class: "img-responsive") %>
  </div><!-- /image thumbnail -->
  <div class="col-sm-12 col-md-8">
    <h2><%= @product.description %></h2>

    <p><div class="rated" data-score="<%= @product.average_rating %>"></div></p>

    <h4>
      <strong>Colour: </strong>
      <%= @product.colour %>
    </h4>

    <h4><%= number_to_currency(@product.price) %></h4>

    <p><%= link_to 'Edit', edit_product_path(@product) %></p>
  </div><!-- /product details -->
</div><!-- /row -->

<div class="ratings-section">
  <h2>Customer Reviews</h2>
  <%= render 'new_comment' %>
  <%= render 'comments' %>
</div>
